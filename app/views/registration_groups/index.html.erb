<p style="color: green"><%= notice %></p>

<h1>Registration groups</h1>

<div id="registration_groups">
  <% @registration_groups_data.each do |registration_group_data| %>
    <%= render registration_group_data[:registration_group] %>
    <%= render 'activity_offerings/activity_offerings_list', activity_offerings: registration_group_data[:activity_offerings] %>
    <p>
      <%= link_to "Show this registration group", registration_group_path(id: registration_group_data[:registration_group].id) %>
    </p>
  <% end %>
</div>

<%= link_to "New registration group", new_registration_group_path %>
