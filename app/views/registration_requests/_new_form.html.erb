<%= form_with(url: registration_requests_path) do |form| %>

  <div>
    <%= form.hidden_field :registration_group_id, value: @registration_group_id %>
  </div>

  <div>
    <%= form.hidden_field :activity_offering_ids, multiple: true, value: @activity_offering_ids %>
  </div>

  <div>
    <%= form.label :year, style: "display: block" do %>
      Year (Freshman, Sophomore, Junior, Senior...):
    <% end %>
    <%= form.text_field :year, required: true %>
  </div>

  <div>
    <%= form.label :major, style: "display: block" do %>
      Major and minor:
    <% end %>
    <%= form.text_field :major, required: true %>
  </div>

  <div>
    <%= form.label :descr, style: "display: block" do %>
      Description (Include any special reasoning for why you should be prioritized for this class):
    <% end %>
    <%= form.text_area :descr, required: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
