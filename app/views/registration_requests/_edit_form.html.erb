<%= form_with(model: registration_request, url: "/registration_requests/" + @RegistrationRequest.id, method: :put) do |form| %>
  <% if @RegistrationRequest.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@RegistrationRequest.errors.count, "error") %> prohibited this @RegistrationRequest from being saved:</h2>

      <ul>
        <% @RegistrationRequest.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :registration_request_data, style: "display: block" do %>
      Request Data: <%= @registration_request_data %>
    <% end %>
    <%= form.hidden_field :registration_request_data, value: @registration_request_data %>
  </div>

  <div>
    <%= form.label :id, style: "display: block" do %>
      Registration Request: <%= @RegistrationRequest.id %>
    <% end %>
    <%= form.hidden_field :id, value: @RegistrationRequest.id %>
  </div>

  <% if current_user.has_role?(:admin) %>
    <div>
      <%= form.label :stateKey, style: "display: block" %>
      <%= form.text_field :stateKey, value: @RegistrationRequest.stateKey %>
    </div>
  <% else %>
    <div>
      <%= form.label :stateKey, style: "display: block" do %>
        State Key: <%= @RegistrationRequest.stateKey %>
      <% end %>
      <%= form.hidden_field :stateKey, value: @RegistrationRequest.stateKey %>
    </div>
  <% end %>

  <div>
    <%= form.label :effectiveDate, style: "display: block" do %>
      Effective Date: <%= @RegistrationRequest.effectiveDate %>
    <% end %>
    <%= form.hidden_field :effectiveDate, value: @RegistrationRequest.effectiveDate %>
  </div>

  <div>
    <%= form.label :expirationDate, style: "display: block" do %>
      Expiration Date: <%= @RegistrationRequest.expirationDate %>
    <% end %>
    <%= form.hidden_field :expirationDate, value: @RegistrationRequest.expirationDate %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" do %>
      Name: <%= @RegistrationRequest.name %>
    <% end %>
    <%= form.hidden_field :name, value: @RegistrationRequest.name %>
  </div>

  <div>
    <%= form.label :descr, style: "display: block" %>
    <%= form.text_field :descr, value: @RegistrationRequest.descr["plain"] %>
  </div>

  <div>
    <%= form.label :requestorId, style: "display: block" do %>
      Person: <%= @RegistrationRequest.requestorId %>
    <% end %>
    <%= form.hidden_field :requestorId, value: @RegistrationRequest.requestorId %>
  </div>

  <div>
    <%= form.label :termId, style: "display: block" do %>
      Term: <%= @RegistrationRequest.termId %>
    <% end %>
    <%= form.hidden_field :termId, value: @RegistrationRequest.termId %>
  </div>

  <div>
    <%= form.label :submittedDate, style: "display: block" do %>
      Submitted Date: <%= @RegistrationRequest.submittedDate %>
    <% end %>
    <%= form.hidden_field :submittedDate, value: @RegistrationRequest.submittedDate %>
  </div>

  <h2>Registration Request Item</h2>
  <%= form.fields_for :@RegistrationRequestItem do |item_form| %>
    <% if @RegistrationRequestItem.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@RegistrationRequestItem.errors.count, "error") %> prohibited this @RegistrationRequestItem from being saved:</h2>

        <ul>
          <% @RegistrationRequestItem.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div>
      <%= item_form.label :id, style: "display: block" do %>
        Registration Request Item: <%= @RegistrationRequestItem.id %>
      <% end %>
      <%= item_form.hidden_field :id, value: @RegistrationRequestItem.id %>
    </div>

    <div>
      <%= item_form.label :registrationRequestId, style: "display: block" do %>
        Registration Request: <%= @RegistrationRequestItem.registrationRequestId %>
      <% end %>
      <%= item_form.hidden_field :registrationRequestId, value: @RegistrationRequestItem.registrationRequestId %>
    </div>

    <div>
      <%= item_form.label :studentId, style: "display: block" do %>
        Person: <%= @RegistrationRequestItem.studentId %>
      <% end %>
      <%= item_form.hidden_field :studentId, value: @RegistrationRequestItem.studentId %>
    </div>

  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
